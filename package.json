{
  "name": "browser-toolkit",
  "version": "1.0.0",
  "description": "個人用のツールキット Chrome拡張機能（テーブルソート、AI連携など）",
  "main": "dist/background.js",
  "directories": {
    "doc": "docs"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run typecheck && pnpm run bundle && pnpm run copy:styles",
    "bundle": "node scripts/bundle.mjs",
    "copy:styles": "mkdir -p dist/styles && cp -R src/styles/* dist/styles/",
    "typecheck": "tsc --noEmit",
    "watch": "node scripts/bundle.mjs --watch",
    "dev": "node scripts/dev-server.mjs",
    "clean": "rm -rf dist",
    "test": "vitest run --project=unit",
    "test:watch": "vitest --project=unit",
    "test:storybook": "vitest run --project=storybook",
    "test-storybook": "pnpm run test:storybook",
    "format": "ultracite fix",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "doctor": "ultracite doctor",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@praha/byethrow": "^0.9.0",
    "date-fns": "^4.1.0",
    "encoding-japanese": "^2.2.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "smol-toml": "^1.6.0",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@chromatic-com/storybook": "^5.0.1",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-vitest": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@types/chrome": "^0.1.36",
    "@types/encoding-japanese": "^2.2.1",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.3",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.2",
    "storybook": "^10.2.8",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.29.3"
}
